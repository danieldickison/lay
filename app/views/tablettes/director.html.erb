<h1>Tablettes Director</h1>

<table id="tablet-stats">
    <thead>
        <th>tablet</th>
        <th>group</th>
        <th>IP</th>
        <th>build</th>
        <th>http ping</th>
        <th>osc ping</th>
        <th>battery</th>
        <th>clock</th>
        <th>stdev</th>
        <th>cache</th>
        <th>now playing</th>
    </thead>
</table>

<form id="assets-form" class="director-form">
    <label>Assets (one per line):
        <textarea name="assets" type="text">
<% for @asset in @assets -%>
<%= @asset %>
<% end -%>
</textarea>
    </label>
    <p><input type="submit"></p>
</form>

<form id="cue-form" class="director-form" action="/tablettes/cue" method="POST">
    <label>Tablet: <input name="tablet" type="number" value="1"></label>
    <label>File: <input name="file" type="text" value="/lay/Tablet/Tablettes/tablette cue 1 T1.mp4"></label>
    <label>Seconds in the future: <input name="seconds" type="number" value="5"></label>
    <label>Seek Time: <input name="seek" type="number" value="0"></label>

    <p><input type="submit"></p>

    <p><label>Trigger time: <input name="time" type="datetime" disabled></label></p>
</form>

<p><a href="/lay/etc/app.apk">Download app.apk</a></p>
