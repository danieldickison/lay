<div id="cast-page">
    <ol id="vips">
        <% for vip in @vips -%>
            <li>
                <h2 class="vip-letter"><%= vip.letter %></h2>
                <img src="<%= vip.face_src %>">
                <ul>
                    <% for kv in vip.info %>
                        <li><strong><%= kv[:key] %>:</strong> <span class="info-value"><%= kv[:value] %></span></li>
                    <% end -%>
                </ul>
            </li>
        <% end -%>
        <% for patron in @raj_patrons %>
            <li>
                <h2 class="vip-letter">Raj Table <%= patron[:table] %></h2>
                <img src="<%= patron[:face_url] %>">
                <ul>
                    <li><strong>Name:</strong> <span class="info-value"><%= patron[:name] %></span></li>
                </ul>
            </li>
        <% end -%>
    </ol>
</div>
