<div id="cast-page">
    <ol id="vips">
        <% for vip in @vips -%>
            <li>
                <h2 class="vip-letter"><%= vip.letter %> - 
                    <%= case vip.letter
                    when 'A' then 'Mikki'
                    when 'B' then 'Eric'
                    when 'C' then 'Adrienne'
                    when 'D' then 'Blythe'
                    end %>
                </h2>
                <img src="<%= vip.face_src %>">
                <ul>
                    <% for kv in vip.info %>
                        <li><strong><%= kv[:key] %>:</strong> <span class="info-value"><%= kv[:value] %></span></li>
                    <% end -%>
                </ul>
            </li>
        <% end -%>
        <% for patron in @raj_patrons %>
            <li>
                <h2 class="vip-letter">Raj - Paul</h2>
                <img src="<%= patron[:face_url] %>">
                <ul>
                    <li><strong>table:</strong> <span class="info-value"><%= patron[:table] %></span></li>
                    <li><strong>first_name:</strong> <span class="info-value"><%= patron[:name] %></span></li>
                </ul>
            </li>
        <% end -%>
    </ol>
</div>
