<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
  <dict>
    <key>Label</key>
    <string>com.danieldickison.ntpd</string>
    <key>RunAtLoad</key>
    <true/>
    <key>KeepAlive</key>
    <true/>
    <key>UserName</key>
    <string>root</string>
    <key>ProgramArguments</key>
    <array>
        <string>/usr/sbin/ntpd</string>
        <string>-n</string>
    </array>
    <key>StandardOutPath</key>
    <string>/Users/rix/lay/log/ntpd.log</string>
    <key>StandardErrorPath</key>
    <string>/Users/rix/lay/log/ntpd.log</string>
  </dict>
</plist>
